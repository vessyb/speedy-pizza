<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://schemas.haulmont.com/cuba/screen/window.xsd"
        caption="msg://caption"
        messagesPack="com.company.speedypizza.web.screens.dish">
    <data>
        <collection id="dishesDc"
                    class="com.company.speedypizza.entity.Dish"
                    view="_local">
            <loader id="dishesDl"/>
        </collection>
    </data>
    <dialogMode height="AUTO" width="AUTO" closeable="true"
                resizable="true" forceDialog="true" modal="false"/>
    <layout>
        <table id="dishesTables"
        width="100%"
        height="100%"
        editable="false"
        dataContainer="dishesDc">
            <columns>
                <column id="name"/>
                <column id="price"/>
            </columns>
            <rows/>
        </table>
    </layout>
</window>