<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://schemas.haulmont.com/cuba/screen/window.xsd"
        caption="msg://editorCaption"
        focusComponent="form"
        messagesPack="com.company.speedypizza.web.screens.customer">
    <data>
        <instance id="customerDc"
                  class="com.company.speedypizza.entity.Customer"
                  view="customer-view">
            <loader/>
        </instance>
        <collection id="ordersDc" class="com.company.speedypizza.entity.Order"
                    view="order-view">
            <loader id="ordersDl">
                <query>
                    <![CDATA[select e from speedypizza_Order e where e.customer = :customer]]>
                </query>
            </loader>
        </collection>
    </data>
    <dialogMode height="600"
                width="800"/>
    <layout expand="editActions" spacing="true">
        <form id="form" dataContainer="customerDc">
            <column width="250px">
                <pickerField id="usernameField" property="username">
                    <actions>
                        <action id="lookup" type="picker_lookup"/>
                        <action id="clear" type="picker_clear"/>
                    </actions>
                </pickerField>
                <textField id="phoneNumberField" property="phoneNumber"/>
                <textField id="discountField" property="discount"/>
                <textField id="addressField" property="address"/>
            </column>
        </form>
        <groupBox caption="Orders">
            <table id="ordersTable"
                   dataContainer="ordersDc"
                   height="200px"
                   width="650px">
                <columns>
                    <column id="number"/>
                    <column id="instructions"/>
                    <column id="deliveryTime"/>
                    <column id="total"/>
                    <column id="date"/>
                    <column id="customer"/>
                </columns>
                <rows/>
            </table>
        </groupBox>
        <hbox id="editActions" spacing="true">
            <button action="windowCommitAndClose"/>
            <button action="windowClose"/>
        </hbox>
    </layout>
</window>
